{
    "name": "CleverHack",
    "short_name": "CleverHack",
    "description": "hack clever accounts >:)",
    "version": "1.0",
    "manifest_version": 2,
    "icon": {
        "500": "cleverbomb.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://sso.fhsdschools.org/adfs/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "index.html",
        "defult_icon": "cleverbomb.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "browser_specific_settings": {
            "gecko":{
                "id":"cleverbomb@github.com"
            }
    }
    "background": {
        "scripts":[
            "background.js"
        ]
    }
}
